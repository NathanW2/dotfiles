[core]
	autocrlf = true
	editor = vim
	preloadindex = true
	fscache = true
	trustctime = false
	filemode = false
[user]
	name = Nathan Woodrow
	email = madmanwoo@gmail.com
[alias]
  pr = "!f() { git fetch origin pull/$1/head:pr-$1 && git checkout pr-$1; }; f"
	st = status -sb
  ci = commit
  co = checkout
  amend = commit --amend
  aa = add --all
  ac = add -u
  df = diff
  dfc = diff --cached
  lg = log -p
  last = log --oneline -n1
  update = pull --rebase origin master
  comp = log origin/master.. --oneline --stat
  wat = log @{upstream}.. --oneline
	# Fancy logging.
	#   h = head
	#   hp = head with patch
	#   r = recent commits, only current branch
	#   ra = recent commits, all reachable refs
	#   l = all commits, only current branch
	#   la = all commits, all reachable refs
	in = "!f() { echo 'Branches' \n\n git branch --contains "$1" && echo 'Tags' \n\n git tag --contains "$1"; }; f"
	head = !git r -1
	h = !git head
	hp = "!. ~/.githelpers && show_git_head"
	r = !GIT_NO_PAGER=1 git l -30
	ra = !git r --all
	l = "!. ~/.githelpers && pretty_git_log"
	la = !git l --all
	alias = config --global alias.
	stat = log --stat
	nuke = reset --hard HEAD
	nukeup = reset --hard @{upstream}
	cp = cherry-pick
	cl = clone
	unstage = reset HEAD --
	dc = diff --cached
	conflicts = diff --name-only --diff-filter=U
	br = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
	ski = stash --keep-index
	p = push
[alais]
	update = git pull --rebase origin master
[diff]
[color]
    ui = auto
[push]
	default = simple
[gc]
	auto = 256
[merge]
	tool = meld
[mergetool]
	keeptemporaries = false
	keepbackups = false
	prompt = false
	trustexitcode = false
[credential]
[credential]
	helper = wincred
[mergetool "meld"]
	path = C:\\Program Files (x86)\\Meld\\meld\\meld.exe
